{
  "manifest_version": 3,
  "name": "Bachub",
  "version": "0.1.0",
  "description": "Assist students to download ManageBac files",
  "permissions": ["cookies", "downloads", "scripting", "storage", "activeTab"],
  "host_permissions": ["https://*.managebac.com/*"],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.managebac.com/*"],
      "js": ["content/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}